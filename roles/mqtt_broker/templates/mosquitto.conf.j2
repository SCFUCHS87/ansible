# Custom Mosquitto configuration
listener 1883
protocol mqtt

# Allow anonymous connections by default
allow_anonymous {{ 'false' if mqtt_auth_enabled | default(false) else 'true' }}

{% if mqtt_auth_enabled | default(false) %}
# Authentication
password_file /etc/mosquitto/passwd
{% endif %}

# Persistence
persistence true
persistence_location /var/lib/mosquitto/

# Logging
log_dest file /var/log/mosquitto/mosquitto.log
log_type error
log_type warning
log_type notice
log_type information

# Connection limits
max_connections -1
max_inflight_messages 20
max_queued_messages 100